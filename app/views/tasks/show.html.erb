<ol class="breadcrumb">
  <li><a><%= link_to "Projects", projects_path %> </a></li>
  <li><a><%= link_to @project.name, project_path(@project) %></a></li>
  <li><a><%= link_to "Tasks", project_tasks_path(@project) %> </a></li>
  <li class= "active"> <%= @task.description %></li>
</ol>

<p>
  <strong>Description:</strong>
  <%= @task.description %>
</p>

<p>
  <strong>Complete:</strong>
  <%= @task.complete %>
</p>

<p>
  <strong>Due Date:</strong>
  <% if @task.due_date %>
    <%= @task.due_date.strftime("%m/%d/%Y") %>
  <%end%>
</p>

<%= link_to 'Edit', edit_project_task_path(@project, @task) %> |
<%= link_to 'Back', project_tasks_path(@project) %>

<h2>Comments</h2>
<% @task.comments.each do |comment| %>
  <div class="col-md-3">
    <div class="row">
      <%= comment.user.full_name %>
    </div>
    <div class="row text-muted">
      <%= time_ago_in_words(comment.created_at) %>
    </div>
  </div>
  <div class="col-md-9">
    <p><%= comment.content %></p>
  </div>
<% end %>


<div class="form-horizontal">
  <%= form_for [@project, @task, @comment] do |f|%>
    <div class="form-group col-md-offset-3 col-md-9">
      <%= f.text_field :content, class: "form-control" %>
    </div>
    <div class="form-group">
      <div class="col-md-offset-3 col-md-2">
        <%= f.submit 'Add Comment', class: "btn btn-primary"%>
      </div>
    </div>
  <% end %>
</div>
